{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Photo Transfer",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$HOME/**", "$DOCUMENT/**", "$PICTURE/**", "$DOWNLOAD/**", "**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.phototransfer.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "2024 Photo Transfer",
      "category": "Utility",
      "shortDescription": "Transfer photos from phone to computer",
      "longDescription": "A fast, modern app for transferring photos and videos from your iPhone or Android phone to your computer.",
      "deb": {
        "depends": ["libmtp9", "libimobiledevice6", "ifuse", "libwebkit2gtk-4.0-37"]
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "minimumSystemVersion": "10.13"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": null
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Photo Transfer",
        "width": 1200,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ]
  }
}
